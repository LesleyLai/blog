---
// A tag button
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a href={href} title={title}><slot /></a>

<style>
  a {
    padding: 0.4em 0.4em;
    font-weight: 800;
    font-size: 12px;
    border-radius: 0.285714rem;

    color: #fff;
    background-color: var(--tag-color);
  }

  a:hover {
    color: #fff;
    background-color: var(--tag-highlight-color);
  }
</style>
