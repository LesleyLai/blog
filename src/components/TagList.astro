---
import { translateTag } from "@i18n/translations";
import { getCurrentLanguage } from "@i18n/i18n";

import Tag from "./Tag.astro";

interface Props {
  tags: string[];
  exclude?: string;
}

const lang = getCurrentLanguage(Astro);
const { tags, exclude } = Astro.props;
---

<ul>
  {
    tags
      .filter((tag) => tag != exclude)
      .map((tag) => <Tag href={`/${lang}/tags/${tag}`}>{translateTag(lang, tag)}</Tag>)
  }
</ul>

<style>
  ul {
    /* TODO: shouldn't need to reset list */
    list-style: none;
    margin: 0;

    display: flex;
  }
</style>
