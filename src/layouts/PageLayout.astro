---
// Layout for "normal" pages that are not blog posts or notes such as index or about

import BaseLayout from "./BaseLayout.astro";
import type { Language } from "../i18n/i18n";

interface Props {
  title: string;
  lang: Language;
  children: unknown;
}

const { title, lang } = Astro.props;
---

<BaseLayout lang={lang} title={title}>
  <main>
    <slot />
  </main>
</BaseLayout>

<style>
  main {
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
    padding: 1rem;

    background-color: var(--content-bg-color);
  }
</style>
